@model WFP.ICT.Data.Entities.CampaignSegment
@using MyToolkit.Html
@using WFP.ICT.Enum
@using WFP.ICT.Web.Models

@using (Html.BeginCollectionItem("Segments"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            @Html.HiddenFor(Model => Model.Id)
            @Html.HiddenFor(Model => Model.CreatedAt)
            @Html.HiddenFor(Model => Model.CampaignId)
            @Html.HiddenFor(Model => Model.SegmentNumber)
            @Html.HiddenFor(Model => Model.SegmentDataFileUrl)
            @Html.HiddenFor(Model => Model.DateFetched)
            @Html.HiddenFor(Model => Model.UploadStatus)
            @Html.HiddenFor(Model => Model.SegmentStatus)
            @Html.HiddenFor(Model => Model.DateApproved)
            @Html.HiddenFor(Model => Model.DateSent)
            Segment : @Model.SegmentNumber
            <div class="pull-right">
                <a href="#" class="btn btn-primary btn-sm" data-tooltip="tooltip" title="Delete"
                   onclick="$(this).parent().parent().parent().remove();">
                    <i class="fa fa-remove" aria-hidden="true"></i>
                </a>
            </div>
        </div>
        <div class="panel-body">
            
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-3">
                        Subject Line
                    </div>
                    <div class="col-md-3">
                        Broadcast Date
                    </div>
                    <div class="col-md-3">
                        Deployment Date
                    </div>
                    <div class="col-md-3">
                        HtmlImageFiles
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <div class="col-md-3">
                        @Html.EditorFor(Model => Model.SubjectLine, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.SubjectLine, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.EditorFor(Model => Model.BroadcastDate, new { htmlAttributes = new { @class = "form-control BroadcastDate" } })
                        @Html.ValidationMessageFor(model => Model.BroadcastDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.EditorFor(Model => Model.DeploymentDate, new { htmlAttributes = new { @class = "form-control DeploymentDate" } })
                        @Html.ValidationMessageFor(model => Model.DeploymentDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.CreativeFiles, new { htmlAttributes = new { @id= "CreativeFiles" + Model.SegmentNumber, @class = "form-control CreativeFiles" } })
                        @Html.Partial("_UploadFile", new UploadFileVM() { FileType = "CreativeFiles" + Model.SegmentNumber, SegmentNumber = Model.SegmentNumber})
                        @Html.ValidationMessageFor(model => model.CreativeFiles, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2">
                        First Start
                    </div>
                    <div class="col-md-2">
                        First End
                    </div>
                    <div class="col-md-2">
                        Second Start
                    </div>
                    <div class="col-md-2">
                        Second End
                    </div>
                    <div class="col-md-2">
                        Third Start
                    </div>
                    <div class="col-md-2">
                        Third End
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2">
                        @Html.EditorFor(Model => Model.FirstRangeStart, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.FirstRangeStart, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        @Html.EditorFor(Model => Model.FirstRangeEnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.FirstRangeEnd, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        @Html.EditorFor(Model => Model.SecondRangeStart, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.SecondRangeStart, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        @Html.EditorFor(Model => Model.SecondRangeEnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.SecondRangeEnd, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        @Html.EditorFor(Model => Model.ThirdRangeStart, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.ThirdRangeStart, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        @Html.EditorFor(Model => Model.ThirdRangeEnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.ThirdRangeEnd, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

        </div>
    </div>
}


<script>
    $(document).ready(function () {
        $('.CreativeFiles').prop('readonly', "readonly");
        $('.BroadcastDate').datetimepicker({
            format: 'M/DD/YYYY hh:mm:ss A'
        });
        $('.DeploymentDate').datetimepicker({
            format: 'M/DD/YYYY hh:mm:ss A'
        }); 
    });
</script>