@model ADSDataDirect.Core.Entities.Campaign

@{
    ViewBag.Title = "Cancel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cancel Campaign<span class="small"></span></h2>

<h3>Are you sure you want to Cancel this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CampaignName)
        </dt>

        <dd>
            @(Model.Approved != null ? Model.Approved.CampaignName : Model.Testing != null ? Model.Testing.CampaignName : Model.CampaignName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BroadcastDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BroadcastDate)
        </dd>

        <dt>
           User Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        
        <dt>
            Order Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancel" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
